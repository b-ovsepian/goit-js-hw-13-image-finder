{{#each this}}
<li class="item">
    <div class="photo-card">
        <div class="photo-box">
            <img width="{{webformatWidth}}" height="{{webformatHeight}}" src="{{webformatURL}}" alt="{{tags}}"
                data-src="{{largeImageURL}}" data-index="{{@index}}" />
        </div>
        <div class="stats">
            <p class="stats-item">
                <i class="material-icons">thumb_up</i>
                {{likes}}
            </p>
            <p class="stats-item">
                <i class="material-icons">visibility</i>
                {{views}}
            </p>
            <p class="stats-item">
                <i class="material-icons">comment</i>
                {{comments}}
            </p>
            <p class="stats-item">
                <i class="material-icons">cloud_download</i>
                {{downloads}}
            </p>
        </div>
    </div>
</li>
{{/each}}